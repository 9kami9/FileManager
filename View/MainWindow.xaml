<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.ViewModels"
        xmlns:vm="clr-namespace:FileManager.ViewModels"
        xmlns:c="clr-namespace:FileManager.Converter"
        mc:Ignorable="d"
        Title="FileManager" Height="600" Width="900" ResizeMode="CanMinimize">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local:MainViewModel x:Key="viewModel"/>
    </Window.Resources>
    
    <Border Background="Transparent">
        <Border Background="#eeeeee" 
                CornerRadius="7" 
                BorderThickness="4" 
                BorderBrush="#82a8f4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding CurrentPath}"
                         Height="30" 
                         Width="550">                    
                </TextBox>
                
                <TextBlock Grid.Column="1" 
                           Text="Search:"
                           FontSize="14"
                           VerticalAlignment="Center" 
                           Margin="25">                    
                </TextBlock>
                <TextBox Grid.Column="1" 
                         Height="30" 
                         Width="150">                    
                </TextBox>

                
                <ListBox ItemsSource="{Binding Items}"
                         SelectedValue="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Grid.Column="0" 
                         Grid.Row="1" 
                         Width="550" 
                         Height="450">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ListBoxItem>
                                <StackPanel x:Name="item" VerticalAlignment="Center" Orientation="Horizontal">
                                    <Image Source="{Binding Icon}"
                                           Height="20"
                                           Width="20"/>
                                    <Label VerticalAlignment="Center"
                                           Content="{Binding Name}"/>
                                </StackPanel>
                                <ListBoxItem.InputBindings>
                                    <MouseBinding Command="{Binding SingleClickCommand, Source={StaticResource viewModel}}" CommandParameter="{Binding SelectedItem, Source={StaticResource viewModel}}" MouseAction="LeftClick"/>
                                    <MouseBinding Command="{Binding DoubleClickCommand, Source={StaticResource viewModel}}" CommandParameter="{Binding SelectedItem, Source={StaticResource viewModel}}" MouseAction="LeftDoubleClick" />
                                </ListBoxItem.InputBindings>
                            </ListBoxItem>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Row="1" 
                        Grid.Column="1" 
                        Width="250" 
                        Height="450" 
                        BorderThickness="1" 
                        BorderBrush="DarkGray">
                    <TextBlock Grid.Column="1"   
                               x:Name="SideSection"
                               Text="{Binding Info, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                               Background="White"
                               Grid.Row="1" 
                               Width="250" 
                               Height="450">                    
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
